let n3 = 30,
     n4 = 30,
     yolochka3 = "100", 
     n5 = 200;

let compare1 = n3 > n4;
let compare2 = n3 < n4;

// let condition = true

if (compare1) {
    console.log("IF_RESULT = compare1 " + compare1)
} else if (compare2) {
    console.log("IF_RESULT = compare2" + compare2)
}else {
    console.log("IF_ELSE = " + compare1)
}

// консоль возвращает IF_ELSE = false
